<nav class="flex justify-center mt-8">
  <div class="inline-flex">
    <a href="{{ pagination.href.first }}">
      <button class="text-gray-800 font-bold py-2 px-4 rounded-l {{ " cursor-not-allowed" if page.url == pagination.href.first }}">
        Inicio
      </button>
    </a>
    <a href="{{ pagination.href.previous }}">
      <button class="py-2 px-4 {{ " cursor-not-allowed" if not pagination.href.previous }}">
        <img src="/assets/img/chevron-left.svg" alt="anterior">
      </button>
    </a>
    {% for pageEntry in pagination.pages %}
      <a href="{{ pagination.hrefs[loop.index0] }}" {{ "aria-current=\"page\"" if page.url == pagination.hrefs[loop.index0] }}>
        <button class="border hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 {{ " bg-gray-300" if page.url == pagination.hrefs[loop.index0] else " border-gray-300 bg-white"}}">
          {{ loop.index }}
        </button>
      </a>
    {% endfor %}
    <a href="{{ pagination.href.next }}">
      <button class="py-2 px-4 {{ " cursor-not-allowed" if not pagination.href.next }}">
        <img src="/assets/img/chevron-right.svg" alt="siguiente">
      </button>
    </a>
    <a href="{{ pagination.href.last }}">
      <button class="text-gray-800 font-bold py-2 px-4 rounded-r {{ " cursor-not-allowed" if page.url == pagination.href.last }}">
        Final
      </button>
    </a>
  </div>
</nav>
