---
permalink: "autores/{{ author | slug }}/"
pagination:
  data: collections.authors
  size: 1
  alias: author
eleventyComputed:
  title: "{{ author }}"
---
{% for post in collections.authors[author] | reverse %}
  <div class="py-4">
    <div>
      <h2 class="inline">
        <a class="text-black" href="{{ post.page.url }}">{{ post.title }}</a>
      </h2>
      <span class="text-2xl">
      </span>
    </div>
    <em>Publicado el {{ post.page.date | readableDate }}</em>
    <p>{{ post.page.excerpt }}...
      <br />
      <a class="font-semibold" href="{{ post.page.url }}">
        Leer m√°s
      </a>
    </p>
    <div>
      {% for tag in post.tags %}
        {% if tag != "post" %}
          <a class="inline-block" href="/tags/{{ tag }}">
            <span class="text-xs rounded-full py-2 px-4 bg-gray-300">{{ tag }}</span>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endfor %}
