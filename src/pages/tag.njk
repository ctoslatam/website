---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - tagList
    - authors
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: "{{ tag }}"
---
{% for post in collections[tag] %}
  <div class="py-4">
    <div>
      <h2 class="inline">
        <a class="text-black" href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <span class="text-2xl">
        &middot; lectura de {{ post.templateContent | readTime }} min
      </span>
    </div>
    <em>Publicado el {{ post.date | readableDate }} por {{ post.data.author.name }}</em>
    <p>{{ post.data.page.excerpt }}...
      <br />
      <a class="font-semibold" href="{{ post.url }}">
        Leer m√°s
      </a>
    </p>
  </div>
{% endfor %}
